<h1>Welcome to my word game!!</h1>
<h3>Here is your word grid</h3>

<%= @grid %>

<h3>What is your best shot?</h3>


<form action="/score" method="get">
  <input type="text" name="attempt" placeholder="Take a guess..">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="hidden" name="grid" value="<%= @grid.join %>">
  <input type="submit" value="Submit!">
</form>

<p>Total number of games</p>
<p><%= @number_of_games %></p>





